<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Photo de profil -->
    <ImageView
        android:id="@+id/trip_creator_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_profil" />

    <!-- Pastille d'état -->
    <TextView
        android:id="@+id/trip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:text="Terminé"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/status_background"
        android:visibility="gone" />

    <!-- Nom de l'utilisateur -->
    <TextView
        android:id="@+id/trip_creator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/trip_creator_photo"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:text="Nom de l'utilisateur"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Départ -->
    <TextView
        android:id="@+id/trip_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_creator_name"
        android:layout_toEndOf="@id/trip_creator_photo"
        android:layout_marginTop="4dp"
        android:text="Départ"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Date -->
    <TextView
        android:id="@+id/trip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_departure"
        android:layout_toEndOf="@id/trip_creator_photo"
        android:layout_marginTop="4dp"
        android:text="Date"
        android:textSize="14sp" />

    <!-- Prix (affiché uniquement s'il existe) -->
    <TextView
        android:id="@+id/trip_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_date"
        android:layout_toEndOf="@id/trip_creator_photo"
        android:layout_marginTop="4dp"
        android:text="Prix"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>


